extends layout

block content
  h1= title
  p Welcome to #{title}
  form(action="/", method="POST")
    input(name="lead_email" type="email", placeholder="Enter your Email ...")
    button(type="submit") Submit Email
  
  if leads 
    for lead in leads
      p(id=lead.id)
       span #{lead.email} 
       | 
       a(href="/lead/" + lead.id) Details
       | 
       button(onclick=`deleteLead('${lead.id}')`) DeleteAJAX

  script(src='https://code.jquery.com/jquery-3.2.1.min.js')
  script(src='/javascripts/leads.js')