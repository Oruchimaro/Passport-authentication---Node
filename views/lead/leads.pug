doctype html
html(lang='en')
  include ../common/head.pug
  +head("Starter MVP")
  body
    header
      include ../common/navbar.pug
      +navbar()
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
              h2 Leads
              table.table.table-dark
                thead
                  tr
                    th(scope="col") Email
                    th(scope="col") Actions
                    th(scope="col")
                  tr
                tbody
                  for lead in leads
                    tr(id=lead.id)
                      td
                        span #{lead.email} 
                      td
                        a(href="/lead/" + lead.id).btn.btn-primary Details
                      td
                        button(onclick=`deleteLead('${lead.id}')`).btn.btn-danger.btn-sm Delete




    include ../common/footer.pug
    +footer()
    
    