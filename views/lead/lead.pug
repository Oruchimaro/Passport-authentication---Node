doctype html
html(lang='en')
  include ../common/head.pug
  +head("Starter MVP")
  body
    header
      include ../common/navbar.pug
      +navbar()
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
              h2 Leads
              table.table.table-dark
                thead
                  tr
                    th(scope="col") Email
                    th(scope="col") Edit
                    th(scope="col") Delete
                  tr
                tbody
                  tr(id=lead.id)
                    td
                      span #{lead.email} 
                    td
                      a(href="/lead/" + lead.id + "/edit").btn.btn-primary Edit
                    td
                      form(action="/lead/" + lead.id + "/delete", method="POST")
                        button(type="submit").btn.btn-danger Delete 

    include ../common/footer.pug
    +footer()